@model ItemViewModel
<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Item @(Model.Id!=0?"Update":"Create")</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post">
            <input asp-for="Id" hidden />
            <div class="border p-3 mt-4">
                <div class="form-floating py-2 col-12">
                    <input asp-for="Name" class="form-control border-0 shadow" />
                    <label asp-for="Name" class="ms-2"></label>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Company" class="form-control border-0 shadow" />
                    <label asp-for="Company" class="ms-2"></label>
                    <span asp-validation-for="Company" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Cost" class="form-control border-0 shadow" />
                    <label asp-for="Cost" class="ms-2"></label>
                    <span asp-validation-for="Cost" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <select asp-for="CategoryId" asp-items="@Model.CategoryList" class="form-select border-0 shadow">
                        <option disabled selected>--Select Category--</option>
                    </select>
                    <label asp-for="CategoryId" class="ms-2"></label>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>

                <div class="row mt-3">
                    <div class="row pt-2">
                        <div class="col-6 col-md-3">
                            @if (@Model.Id != 0)
                            {
                                <button type="submit" class="btn btn-primary form-control">Update</button>
                            }
                            else
                            {
                                <button type="submit" class="btn btn-primary form-control">Create</button>
                            }
                        </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Item" asp-action="Index" class="btn btn-secondary border  form-control">
                            Back to List
                        </a>
                    </div>
                </div>


            </div>
        </form>
    </div>
</div>
