@model PL.Models.InventoryItemViewModel

<h2>Add @Model.Status Item</h2>
<form asp-action="AddItem" method="post">
    <input type="hidden" asp-for="Status" />
    <div class="form-group">
        <label asp-for="ItemId" class="control-label"></label>
        <select asp-for="ItemId" class="form-control" asp-items="Model.ItemList"></select>
    </div>
    <div class="form-group">
        <label asp-for="Quantity" class="control-label"></label>
        <input asp-for="Quantity" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ExpiryDate" class="control-label"></label>
        <input asp-for="ExpiryDate" class="form-control" type="date" />
    </div>
    <div class="form-group">
        <label asp-for="Container" class="control-label"></label>
        <input asp-for="Container" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Location" class="control-label"></label>
        <input asp-for="Location" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Add" class="btn btn-primary" />
    </div>
</form>
