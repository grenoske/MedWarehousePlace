@model WorkerItemListViewModel

<h2>Worker Items</h2>
<table class="table">
    <thead>
        <tr>
            <th>Item</th>
            <th>Quantity</th>
            <th>From</th>
            <th>To</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.WorkerItems)
        {
            <tr>
                <td>@item.InventoryItem.Item.Name</td>
                <td>@item.InventoryItem.Quantity</td>
                <td>@item.InventoryItem.Location</td>
                <td>@item.LocationTo</td>
                <td>
                    <a href="@Url.Action("PlaceItem", "Inventory", new { workerItemId = item.Id })" class="btn btn-primary">Place Item</a>
                </td>
            </tr>
        }
    </tbody>
</table>
